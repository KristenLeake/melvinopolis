<div class="header">
	<h1>Contact</h1>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12 col-sm-8 email-form">	
			<%= render 'contact_form' %>
		</div> 

		<div class="col-xs-12 col-sm-8 commission-form">
			<%= render 'commission_form' %>
		</div> 		

		<div class="col-xs-12 col-sm-4 contact">
			<ul id="general-links">
				<li id="twitter" class="links"><%= link_to "twitter", "//www.twitter.com/melvinopolis", target: "_blank" %></li>
				<li id="facebook" class="links"><%= link_to "facebook", "//www.facebook.com/melvincosplay", target: "_blank" %></li>
				<li id="instagram" class="links"><%= link_to "instagram", "//www.instagram.com/melvinopolis", target: "_blank" %></li>
			</ul>
			
			<ul id="work-links">
				<li id="github" class="links"><%= link_to "github", "//github.com/melvinopolis", target: "_blank" %></li>
				<li id="linkedin" class="links"><%= link_to "linkedin", "//www.linkedin.com/in/melvinopoils", target: "_blank" %></li>
			</ul> 

			<ul id="cosplay-links">
				<li><%= link_to image_tag("contact/cospix.png", class: "img-responsive"), "//cospix.net/melvinopolis/", target: "_blank" %></li>
				<li><%= link_to image_tag("contact/acp.png", class: "img-responsive"), "//www.acparadise.com/loves/melvin", target: "_blank" %></li>
			</ul>
		</div>
	</div>
</div>	