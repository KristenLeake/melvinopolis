<div class="header">
    <h1>Costumes</h1>
</div>

<%= link_to "Sort by Genre", genres_path, type: "button", class: "btn btn-default btn-lg center-block sort" %>

<div class="container-fluid">
    <!-- Loop to show Years -->
    <% @years.sort_by{|t| - t.created_at.to_i}.each do |year| %>
        <div class="row year">
            <% if year.costumes.exists? %>
                <h2><%= year.year %></h2>
            <% end %>
        </div>

        <!-- Loop to show Costume Thumbnails -->
        <div class="gallery">
            <div class="row">
                <% year.costumes.sort_by{|t| - t.created_at.to_i}.each do |costume| %>
                    <div class="col-xs-6 col-sm-3 col-lg-2 center-block">
                        <%= link_to image_tag(costume.thumbnail, class: "img-responsive"), costume_path(costume.id) %>
                    </div>
                <% end %>
            </div>
        </div>
    <% end %>
</div>