<p id="notice"><%= notice %></p>

<div class="header">
  <h1>Costumes</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Character</th>
      <th>Variation</th>
      <th>Notes</th>
      <th>Awards</th>
      <th>Thumbnail</th>
      <th>Year</th>
      <th>Show</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @costumes.each do |costume| %>
      <tr>
        <td><%= costume.character %></td>
        <td><%= costume.variation %></td>
        <td><%= costume.notes %></td>
        <td><%= costume.awards %></td>
        <td><%= costume.thumbnail %></td>
        <td><%= costume.year_id %></td>
        <td><%= costume.show_id %></td>
        <td><%= costume.genre_id %></td>
        <td><%= link_to 'Show', costume %></td>
        <td><%= link_to 'Edit', edit_costume_path(costume) %></td>
        <td><%= link_to 'Destroy', costume, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Costume', new_costume_path %>
