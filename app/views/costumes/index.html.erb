<p id="notice"><%= notice %></p>

<div class="header">
    <h1>Costumes</h1>
</div>

<div class="container-fluid">
    <% @years.sort_by{|t| - t.created_at.to_i}.each do |year| %>
        <div class="row year">
            <% if year.costumes.exists? %>
                <h2><%= year.year %></h2>
            <% end %>
        </div>

        <div class="container-fluid gallery">
            <div class="row">
                <div class="col-xs-6 col-sm-3 center-block">
                    <% year.costumes.each do |costume| %>
                            <%= link_to image_tag(costume.thumbnail, class: "img-responsive"), costume_path(costume.id) %>
                    <% end %>
                </div>
            </div>
        </div>
    <% end %>
</div>