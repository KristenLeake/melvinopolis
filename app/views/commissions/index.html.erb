<p id="notice"><%= notice %></p>

<div class="header">
  <h1>Commissions</h1>
</div>

<div class="container-fluid">
    <% @years.sort_by{|t| - t.created_at.to_i}.each do |year| %>
        <div class="row year">
          <% if year.commissions.exists? %>
            <h2><%= year.year %></h2>
          <% end %>
        </div>

        <div class="container-fluid gallery">
            <div class="row">
                <% year.commissions.sort_by{|t| - t.created_at.to_i}.each do |commission| %>
                    <div class="col-xs-6 col-sm-3 center-block">
                        <%= image_tag(commission.thumbnail, class: "img-responsive") %>
                    </div>
                <% end %>
            </div>
        </div>
    <% end %>
</div>