<div class="header">
    <h1>Costumes</h1>
</div>

<%= link_to "Sort by Year", costumes_path, type: "button", class: "btn btn-default btn-lg center-block sort" %>

<div class="container-fluid">
    <% @genres.each do |genre| %>
        <div class="row year">
            <% if genre.costumes.exists? %>
                <h2><%= genre.name %></h2>
            <% end %>
        </div>

        <div class="container-fluid gallery">
            <div class="row">
                <div class="col-xs-6 col-sm-3 center-block">
                    <% genre.costumes.each do |costume| %>
                            <%= link_to image_tag(costume.thumbnail, class: "img-responsive"), costume_path(costume.id) %>
                    <% end %>
                </div>
            </div>
        </div>
    <% end %>
</div>
